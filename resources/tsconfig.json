{
    "compilerOptions": {
        "target": "es2015",
        "useDefineForClassFields": true,
        "module": "es2015",
        "lib": ["DOM", "ESNext"],
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "skipLibCheck": true
    },
    "include": ["ts"]
}
